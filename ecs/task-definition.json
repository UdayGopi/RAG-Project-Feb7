{
  "family": "rag-app-production",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/rag-app-task-role",
  "containerDefinitions": [
    {
      "name": "rag-app",
      "image": "YOUR_ACCOUNT_ID.dkr.ecr.YOUR_REGION.amazonaws.com/rag-app:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 5001,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "ENVIRONMENT",
          "value": "production"
        },
        {
          "name": "DEBUG",
          "value": "false"
        },
        {
          "name": "STORAGE_BACKEND",
          "value": "s3"
        },
        {
          "name": "S3_BUCKET",
          "value": "your-rag-documents"
        },
        {
          "name": "AWS_REGION",
          "value": "us-east-1"
        },
        {
          "name": "VECTOR_STORE",
          "value": "qdrant"
        },
        {
          "name": "QDRANT_URL",
          "value": "http://your-qdrant-url:6333"
        },
        {
          "name": "QDRANT_COLLECTION",
          "value": "rag_documents"
        },
        {
          "name": "LLM_PROVIDER",
          "value": "groq"
        },
        {
          "name": "LLM_MODEL",
          "value": "llama-3.1-8b-instant"
        },
        {
          "name": "EMBEDDING_PROVIDER",
          "value": "huggingface"
        },
        {
          "name": "EMBEDDING_MODEL",
          "value": "BAAI/bge-base-en-v1.5"
        },
        {
          "name": "RETRIEVAL_MODE",
          "value": "hybrid"
        },
        {
          "name": "ENABLE_QUERY_EXPANSION",
          "value": "true"
        },
        {
          "name": "CACHE_ENABLED",
          "value": "true"
        },
        {
          "name": "LOG_LEVEL",
          "value": "INFO"
        }
      ],
      "secrets": [
        {
          "name": "SECRET_KEY",
          "valueFrom": "arn:aws:secretsmanager:YOUR_REGION:YOUR_ACCOUNT_ID:secret:rag-app/secret-key"
        },
        {
          "name": "GROQ_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:YOUR_REGION:YOUR_ACCOUNT_ID:secret:rag-app/groq-api-key"
        },
        {
          "name": "JWT_SECRET",
          "valueFrom": "arn:aws:secretsmanager:YOUR_REGION:YOUR_ACCOUNT_ID:secret:rag-app/jwt-secret"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/rag-app",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs",
          "awslogs-create-group": "true"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:5001/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      },
      "mountPoints": [],
      "volumesFrom": [],
      "ulimits": [
        {
          "name": "nofile",
          "softLimit": 65536,
          "hardLimit": 65536
        }
      ]
    }
  ]
}
