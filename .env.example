# ==================== Application ====================
# Copy this file to .env and set real values. Do not commit .env with secrets.
# In production (AWS), set these via ECS/App Runner environment or Secrets Manager.

APP_NAME=CarePolicy RAG Hub
ENVIRONMENT=development
DEBUG=true
PORT=5001
HOST=0.0.0.0

# ==================== Security (set in production!) ====================
SECRET_KEY=your_secret_key_here_change_in_production
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_MIN=10080

# ==================== API Keys ====================
GROQ_API_KEY=your_groq_api_key_here

# ==================== OAuth (optional) ====================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
MS_CLIENT_ID=
MS_CLIENT_SECRET=
APP_BASE_URL=http://127.0.0.1:5001

# ==================== Storage ====================
STORAGE_BACKEND=local
S3_BUCKET=
S3_PREFIX=documents
AWS_REGION=us-east-1

# ==================== RAG (rag_agent.py) ====================
CLEANING_ENABLED=true
TABLE_EXTRACT_ENABLED=true
CACHE_ENABLED=true
TENANT_HIGH_CONF_THRESH=0.75
TENANT_MIN_CONF_THRESH=0.5
ROUTING_COSINE_WEIGHT=0.7
TENANT_ALIASES={"hih": "HIH", "rc": "RC"}

# ==================== Optional: Bedrock (AWS embeddings) ====================
# EMBEDDING_PROVIDER=bedrock
# BEDROCK_EMBEDDING_MODEL=amazon.titan-embed-text-v1
# AWS_REGION=us-east-1

# ==================== Optional: OpenSearch (AWS vector store) ====================
# VECTOR_STORE=opensearch
# OPENSEARCH_HOST=search-your-domain.us-east-1.es.amazonaws.com
# OPENSEARCH_PORT=443
# OPENSEARCH_USE_SSL=true
# OPENSEARCH_USER=admin
# OPENSEARCH_PASSWORD=
# OPENSEARCH_INDEX=rag_documents

# ==================== Optional: Logging ====================
LOG_LEVEL=INFO
